<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="GB_AndroidCalc" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/backgroundTintLight</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/backgroundTintLight</item>
        <item name="colorAccent">@color/backgroundTintLight</item>

    </style>

    <style name="Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/backgroundTintDark</item>
        <item name="colorAccent">@color/backgroundTintDark</item>

    </style>

    <style name="MyStyle1">
        <item name="android:textSize">@dimen/number</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.5</item>

        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginEnd">@dimen/bottomMargin</item>
        <item name="cornerRadius">@dimen/cornerRadius</item>
    </style>

    <style name="MyStyle2">
        <item name="android:textSize">@dimen/number</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.8</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyStyle3">
        <item name="android:textSize">@dimen/number</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.5</item>
        <item name="android:backgroundTint">@color/backgroundTintLight</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="MyStyle1land">
        <item name="android:textSize">@dimen/calc_number_land</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.5</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginEnd">@dimen/bottomMargin</item>
        <item name="cornerRadius">@dimen/cornerRadius</item>
    </style>

    <style name="MyStyle2land">
        <item name="android:textSize">@dimen/calc_number_land</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.8</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyStyle3land">
        <item name="android:textSize">@dimen/calc_number_land</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.5</item>
        <item name="android:backgroundTint">@color/backgroundTintLight</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>